# Recharging crossbow
execute if entity @s[nbt={Inventory:[{id:"minecraft:arrow"}]}] run item replace entity @s weapon.mainhand with minecraft:crossbow[minecraft:enchantments={levels:{"minecraft:quick_charge":5}},minecraft:custom_name='{"bold":true,"color":"red","italic":false,"translate":"ghast_crossbow"}',minecraft:lore=['{"translate":"ghast_crossbow.lore","color": "white","italic":false}'],minecraft:charged_projectiles=[{id:"minecraft:firework_rocket",count:1}],minecraft:custom_data={transformable:1,bow:1,fastexplode:1,craftusable:1}] 1
# clearing 1 arrow
execute if entity @s[nbt={Inventory:[{id:"minecraft:arrow"}]}] run clear @s[nbt=!{Inventory:[{components:{"minecraft:custom_data":{infinite_arrow:1}}}]}] minecraft:arrow 1